{
    "name": "secret-santa-server",
    "version": "0.0.1",
    "description": "Back end api for secret santa website.",
    "main": "index.js",
    "author": "jgilliland@rndgroup.com",
    "license": "MIT",
    "private": false,
    "scripts": {
        "clean": "rm -rf dist",
        "start": "nodemon index.js",
        "build": "yarn clean && node_modules/typescript/bin/tsc",
        "migrate": "react-scripts build && node_modules/.bin/sequelize db:migrate --env development",
        "migrate:undo": "react-scripts build && node_modules/.bin/sequelize db:migrate:undo --env development",
        "migrate:undo:all": "react-scripts build && node_modules/.bin/sequelize db:migrate:undo:all --env development"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "config": "^3.3.1",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "pg": "^8.3.3",
        "sequelize": "^6.3.5",
        "sequelize-cli": "^6.2.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.8",
        "sqlite3": "^5.0.0",
        "typescript": "~3.7.2"
    }
}
