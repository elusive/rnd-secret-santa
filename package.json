{
    "name": "secret-santa-site",
    "version": "0.0.1",
    "description": "Christmas 2020 secret santa website for RND Group.",
    "main": "dist/index.js",
    "author": "jgilliland@rndgroup.com",
    "license": "MIT",
    "private": false,
    "scripts": {
        "clean": "rm -rf dist",
        "watch": "nodemon --watch src --watch views --exec ts-node src/index.ts -e ts,json,ejs",
        "copy-assets": "cp -r ./public/ ./dist/public/ && cp -r ./views/ ./dist/views/",
        "prestart": "npm run build",
        "start": "npm run watch",
        "build": "npm run clean && tsc && npm run copy-assets",
        "debug": "nodemon --watch src --watch views -e ts,json,ejs --inspect dist/index.js",
        "test": "mocha -r ts-node/register ./test/* --exit"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "config": "^3.3.1",
        "connect-flash": "^0.1.1",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "dotenv-cli": "^4.0.0",
        "ejs": "^3.1.5",
        "express": "^4.17.1",
        "express-ejs-layouts": "^2.5.0",
        "express-session": "^1.17.1",
        "pg": "^8.4.1"
    },
    "devDependencies": {
        "@types/connect-flash": "^0.0.35",
        "@types/cors": "^2.8.7",
        "@types/express": "^4.17.8",
        "@types/express-session": "^1.17.0",
        "@types/mocha": "^8.0.3",
        "@types/supertest": "^2.0.10",
        "mocha": "^8.2.0",
        "nodemon": "^2.0.4",
        "shelljs": "^0.8.4",
        "sqlite3": "^5.0.0",
        "supertest": "^5.0.0",
        "ts-node": "^9.0.0",
        "typescript": "~3.7.2"
    }
}
